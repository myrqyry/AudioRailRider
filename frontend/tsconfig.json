{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": false,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "shared/*": [
        "../shared/*"
      ]
    },
    // "allowImportingTsExtensions": true,
    "noEmit": false,
    "types": ["vite/client", "node", "jest"],
    "esModuleInterop": true
  },
  "include": ["src", "../shared"]
}
